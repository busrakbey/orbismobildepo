<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="#FF66FFCC"
    >
    <ImageView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/map_info_photo"
        />
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content" android:id="@+id/mescere_name_tv"
        android:layout_toRightOf="@id/map_info_photo" android:textSize="@dimen/normal_definition_text_size" android:textColor="#FF000000"
        android:paddingBottom="5dip"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/deneme_tv" android:layout_below="@id/mescere_name_tv"
        android:layout_toRightOf="@id/map_info_photo" android:textSize="@dimen/normal_definition_text_size" android:textColor="#FF000000"/>
</RelativeLayout>