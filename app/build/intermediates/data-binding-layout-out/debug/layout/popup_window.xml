<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:textSize="@dimen/button_text"
            android:id="@+id/ozm_bolme_kapat" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            android:layout_marginTop="0dp">


                <TextView
                    android:textSize="@dimen/normal_definition_text_size"
                    android:layout_weight="1"
                    android:text="Bölme No"
                    android:textColor="@color/text"
                    style="@style/listTable_SatirTextView_buyuk"
                    />
                <View
                    style="@style/listTable_satirAyracView"></View>




                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/normal_definition_text_size"
                    android:textColor="@color/text"
                    android:text="Mevkii"
                    style="@style/listTable_SatirTextView"
                    />
                <View
                    style="@style/listTable_satirAyracView"></View>

                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/normal_definition_text_size"
                    android:textColor="@color/text"
                    android:text="Kontrol Şekli"
                    style="@style/listTable_SatirTextView"
                    />
                <View
                    style="@style/listTable_satirAyracView"></View>

                <TextView
                    android:layout_weight="1"
                    android:textSize="@dimen/normal_definition_text_size"
                    android:textColor="@color/text"
                    android:text="Açıklama"
                    style="@style/listTable_SatirTextView"
                    />
                <View
                    style="@style/listTable_satirAyracView"></View>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
                <ListView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:animationCache="false"
                    android:scrollingCache="true"
                    android:layout_marginTop="5dp"
                    android:smoothScrollbar="true"
                    android:stackFromBottom="false"
                    android:background="@drawable/ip_dd_listitem_bg"
                    android:id="@+id/ozm_bolme_popup_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
        </LinearLayout>
</LinearLayout>