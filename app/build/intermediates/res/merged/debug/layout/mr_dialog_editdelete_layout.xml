<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:text="Kayıt Bilgisi"
                android:textSize="@dimen/mr_inputsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="left"
                android:id="@+id/mr_dia_edd_contentTxt"
                android:textSize="@dimen/mr_labelsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/mr_haki"
                android:background="@color/transparent"
                android:id="@+id/mr_dia_edd_editBtn"
                android:text="Düzenle"
                android:textSize="@dimen/mr_inputsize"
                style="@style/mr_fe_in_button_linee" />
            <Button
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/mr_haki"
                android:background="@color/transparent"
                android:id="@+id/mr_dia_edd_deleteBtn"
                android:text="Sil"
                android:textSize="@dimen/mr_inputsize"
                style="@style/mr_fe_in_button_linee" />
            <Button
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textColor="@color/mr_haki"
                android:background="@color/transparent"
                android:id="@+id/mr_dia_edd_exitBtn"
                android:text="Vazgeç"
                android:textSize="@dimen/mr_inputsize"
                style="@style/mr_fe_in_button_linee" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>