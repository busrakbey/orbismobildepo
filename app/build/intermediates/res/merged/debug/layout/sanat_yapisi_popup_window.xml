<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:id="@+id/not_kapat" />

        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:id="@+id/not_kaydet" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="100dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="100dp"
            android:weightSum="1">

            <TextView
                android:text="Cins"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <Spinner
                android:id="@+id/cins_spinner"
                android:background="@color/my_bisque"
                style="@style/mr_fe_in_spinner"
                android:layout_weight="1" />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="125dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <TextView
                android:text="Dar/Geniş"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <Spinner
                android:id="@+id/dar_genis_spinner"
                android:background="@color/my_bisque"
                style="@style/mr_fe_in_spinner"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/yaricap_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="Yarıçap(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />


            <EditText
                android:id="@+id/yaricap_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/aciklik_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="Açıklık(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/aciklik_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>





    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="125dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/en_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="En(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/en_edit_text"
                style="@style/mr_fe_in_edittext_colorful"
                android:layout_weight="1"
                android:background="@color/my_bisque"
                android:inputType="numberDecimal"
                android:selectAllOnFocus="true" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/boy_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="Boy(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/boy_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">


            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/yukseklik_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="Yükseklik(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/yukseklik_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/cap_ly"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent">
            <TextView
                android:text="Çap(m)"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/cap_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>







    </LinearLayout>



</LinearLayout>