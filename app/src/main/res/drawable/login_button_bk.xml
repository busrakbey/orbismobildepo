<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#fdfdfd"
                android:centerColor="#93BEDA"
                android:startColor="#93BEDA" />
            <corners android:radius="27dp" />
        </shape>

    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="27dp" />
            <gradient android:angle="45" android:centerX="35%" android:endColor="#93BEDA" android:startColor="#5493BD" android:type="linear" />
            <size android:width="182dp" android:height="54dp" />
        </shape>
    </item>
</selector>