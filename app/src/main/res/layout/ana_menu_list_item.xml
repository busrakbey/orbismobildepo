<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_gradient"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dip" >

    <!--  -->

    <ImageView
        android:id="@+id/fire_image"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="left|center"
        android:layout_marginTop="10dip"
        android:contentDescription="@string/app_name"
        android:src="@drawable/fire"
        />


    <!-- Rightend Arrow -->
    <ImageView
        android:id="@+id/fire_alt_menu_imageView1"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_right" />


    <TextView
        android:id="@+id/fire_alt_menu_list_item_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------"
        android:textColor="@color/mylabeltextcolor"
        android:textSize="14dip"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:typeface="sans"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fire_image"
        android:layout_toEndOf="@+id/fire_image" />




</RelativeLayout>