<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_ozm_hb_sorgula_list_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/gp_oa_ui_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/ozm_hb_sorgula_list_ui_toolbar"
            android:background="@color/mr_haki"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />


        <RelativeLayout
            android:layout_height="@dimen/dar_nav_bar_height"
            style="@style/mr_window_navbar_kucuk">

            <TextView
                android:id="@+id/navbar_labelformName1"
                style="@style/mr_window_navbar_label_textview"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Sorgulama Ekranı"
                android:textSize="@dimen/mr_navbar_label_textviewsize" />

            <LinearLayout  style="@style/topbarbottomviewline">

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Bölge"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_definition_text_size" />

                <Spinner
                    android:id="@+id/bolge_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:lines="3"
                    android:maxLines="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Müdürlük"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_definition_text_size" />

                <Spinner
                    android:id="@+id/mudurluk_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Şeflik"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_definition_text_size"

                    />

                <Spinner
                    android:id="@+id/seflik_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_weight="1" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:layout_height="50dp">







            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Yıl Başlangıç"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_definition_text_size"
                    style="@style/oa_frag_text_style"
                    />
                <Spinner
                    android:layout_width="match_parent"
                    android:textSize="@dimen/normal_definition_text_size"
                    android:inputType="text"
                    android:layout_height="match_parent"
                    style="@style/mr_fe_in_edittext"
                    android:id="@+id/yil_bas_spinner"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Yıl Bitiş"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/normal_definition_text_size"
                    style="@style/oa_frag_text_style"
                    />
                <Spinner
                    android:id="@+id/yil_bit_spinner"
                    android:layout_height="match_parent"
                    style="@style/mr_fe_in_edittext"
                    android:layout_weight="1" />

            </LinearLayout>






        </LinearLayout>










        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_margin="@dimen/top_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_height="wrap_content"
                style="@style/mr_window_form_row_container">
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/mr_window_form_cell_container">
                    <Button
                        android:id="@+id/ozm_hb_sorgula_button"
                        android:drawableLeft="@android:drawable/ic_search_category_default"
                        android:text="S o r g u l a"
                        android:textColor="@color/bembeyaz"
                        android:textSize="@dimen/big_buttons_text_size"
                        android:background="@color/orman_yesili"
                        style="@style/mr_fe_in_button_linee"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:background="@drawable/myedittextstylebacktranswithgrayborder"
            android:textColor="@color/text"
            android:textSize="@dimen/mr_navbar_label_textviewsize"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="Hastalık Bildirim Listesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            android:layout_marginTop="0dp">

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Şeflik"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="İl"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Talep No"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Kişi"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Tarih"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>




            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Yer"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>


            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam Alan"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Kategori"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

        </LinearLayout>




        <ListView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:animationCache="false"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stackFromBottom="false"
            android:background="@drawable/ip_dd_listitem_bg"
            android:id="@+id/ozm_hb_sorgula_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>



    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
