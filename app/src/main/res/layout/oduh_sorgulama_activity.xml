<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_ozm_hb_sorgula_list_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/gp_oa_ui_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/mr_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />



        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow"/>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:orientation="vertical">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Bölge"
                    android:textStyle="bold"
                    android:textColor="@color/mr_toolbar2"
                    android:textSize="@dimen/normal_definition_text_size" />

                <Spinner
                    android:id="@+id/bolge_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_height="@dimen/spinner_heigh"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Müdürlük"
                    android:textStyle="bold"
                    android:textColor="@color/mr_toolbar2"
                    android:textSize="@dimen/normal_definition_text_size" />

                <Spinner
                    android:id="@+id/mudurluk_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_weight="1"
                    android:layout_height="@dimen/spinner_heigh"
                    android:maxLines="1"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:orientation="vertical">

                <TextView
                    style="@style/oa_frag_text_style"
                    android:text="Şeflik"
                    android:textStyle="bold"
                    android:textColor="@color/mr_toolbar2"
                    android:textSize="@dimen/normal_definition_text_size"

                    />

                <Spinner
                    android:id="@+id/seflik_spinner"
                    style="@style/mr_fe_in_edittext"
                    android:layout_weight="1"
                    android:layout_height="@dimen/spinner_heigh"
                    android:maxLines="1"
                    android:singleLine="true" />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content">







            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:weightSum="1"


                >

                <TextView
                    android:text="Yıl Başlangıç"
                    android:textColor="@color/mr_toolbar2"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_definition_text_size"
                    style="@style/oa_frag_text_style"
                    />
                <Spinner
                    style="@style/mr_fe_in_edittext"
                    android:id="@+id/yil_bas_spinner"
                    android:layout_height="@dimen/spinner_heigh"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:text="Yıl Bitiş"
                    android:textColor="@color/mr_toolbar2"
                    android:textStyle="bold"
                    android:textSize="@dimen/normal_definition_text_size"
                    style="@style/oa_frag_text_style"
                    />

                <Spinner
                    android:id="@+id/yil_bit_spinner"
                    android:layout_height="@dimen/spinner_heigh"
                    style="@style/mr_fe_in_edittext" />

            </LinearLayout>






        </LinearLayout>










        <LinearLayout
            android:layout_margin="@dimen/top_margin"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">



                    <Button
                        android:id="@+id/oduh_temizle_button"
                        style="@style/mr_fe_in_button_linee"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edittext_height"
                        android:background="@drawable/yeni_buton"
                        android:drawableLeft="@android:drawable/ic_menu_delete"
                        android:gravity="center"
                        android:text=" T E M İ Z L E "
                        android:textColor="@color/bembeyaz"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/oduh_sorgula_button"
                        style="@style/mr_fe_in_button_linee"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/edittext_height"
                        android:background="@drawable/yeni_buton"
                        android:drawableLeft="@android:drawable/ic_menu_search"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text=" S O R G U L A "
                        android:textColor="@color/bembeyaz"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bölge"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Müdürlük"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Şeflik"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Yıl"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bal Ormanı Sayısı"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>



            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam Alan"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bal Toplam Kapasite"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

        </LinearLayout>




        <ListView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:animationCache="false"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stackFromBottom="false"
            android:background="@drawable/ip_dd_listitem_bg"
            android:id="@+id/oduh_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>



    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
