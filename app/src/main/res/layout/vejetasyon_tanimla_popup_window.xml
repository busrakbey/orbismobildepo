<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kapat"
            android:id="@+id/vej_kapat" />

        <Button
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:text="Kaydet"
            android:id="@+id/vej_kaydet" />


    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="125dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <TextView
                android:text="Bölme No"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:text=""
                android:inputType="number"
                android:layout_height="75dp"
                style="@style/mr_fe_in_edittext_colorful"
                android:id="@+id/vej_bolme_no_autoCompleteTextView"
                android:layout_marginTop="0dp"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/text"
                />

        </LinearLayout>









    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="5dp"

        android:layout_height="125dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="125dp"
            android:weightSum="1">

            <TextView
                android:text="Saha Alanı"
                android:textColor="@color/blue"
                style="@style/oa_frag_text_style"
                />

            <EditText
                android:id="@+id/saha_alani_edit_text"
                android:background="@color/my_bisque"
                android:selectAllOnFocus="true"
                style="@style/mr_fe_in_edittext_colorful"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

        </LinearLayout>









    </LinearLayout>


</LinearLayout>